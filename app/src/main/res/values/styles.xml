<resources>
    <!-- Style for the TextInputLayout container -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxBackgroundColor">#A3DCE9</item>
        <item name="hintTextColor">#4B647A</item>
        <item name="android:textColorHint">#4B647A</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Style for TextInputEditText itself -->
    <style name="CustomTextInputEditText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#4B647A</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
